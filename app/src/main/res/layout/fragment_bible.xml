<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bible_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <org.resourcecenterint.resourcebiblestudyandroid.common.widgets.DraggableGridView
        android:id="@+id/bibleDraggableView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </org.resourcecenterint.resourcebiblestudyandroid.common.widgets.DraggableGridView>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="bottom|right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/bible_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            fab:fab_addButtonColorNormal="@color/orange"
            fab:fab_addButtonColorPressed="@color/white_pressed"
            fab:fab_icon="@drawable/ic_dictionary"
            fab:fab_labelStyle="@style/menu_labels_style"
            android:layout_marginBottom="56dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp">


        </com.getbase.floatingactionbutton.FloatingActionButton>

    </RelativeLayout>


</RelativeLayout>
